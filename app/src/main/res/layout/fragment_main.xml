<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <com.mphj.customview_helper.RoundedImage
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/test"
                app:shadow="true"
                android:layout_alignParentTop="true"
                app:radiusOffset="30dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/user" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:text="چینی امین"
                    android:layout_marginTop="10dp"
                    android:shadowColor="#000"
                    android:shadowRadius="5"/>
            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"
            android:text="برای این افراد گزارش امروز ثبت نشده است:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"
            android:textColor="#000"
            android:id="@+id/person_container_404"
            android:text="موردی وجود ندارد"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/person_container">
            </LinearLayout>
        </HorizontalScrollView>


        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="68dp" />
    </LinearLayout>
</ScrollView>
