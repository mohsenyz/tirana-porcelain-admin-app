<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_shape"
        android:paddingRight="4dp">
        <EditText
            android:id="@+id/input_product_name"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="نام جنس" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/input_count"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/bp_gradient"
                android:hint="تعداد" />
            <EditText
                android:id="@+id/input_product_price"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="قیمت مواد" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@id/pan"
            android:background="#eaeaea">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#555"
                android:gravity="center"
                android:textSize="12dp"
                android:id="@+id/delete"
                android:text="حذف"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
