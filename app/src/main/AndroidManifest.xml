<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tiranaporcelain.admin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AccountryApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@drawable/account"
        android:label="@string/app_name"
        android:roundIcon="@drawable/account"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.NewCategoryActivity"
            android:theme="@style/AppTheme.Dialog.NoTitle" />
        <activity
            android:name=".activity.NewCustomerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SelectCategoryActivity"
            android:theme="@style/AppTheme.Dialog.NoTitle" />
        <activity
            android:name=".activity.SelectCustomerActivity"
            android:theme="@style/AppTheme.Dialog.NoTitle" />
        <activity
            android:name=".activity.GetCountActivity"
            android:theme="@style/AppTheme.Dialog.NoTitle" />
        <activity
            android:name=".activity.AlertActivity"
            android:theme="@style/AppTheme.Dialog.NoTitle" />
        <activity android:name=".activity.ReportWorkActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>